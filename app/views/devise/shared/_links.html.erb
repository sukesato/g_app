<%- if controller_name != 'sessions' %>
  <div class = "field a"><%= link_to "ログインはこちら",new_session_path(resource_name),class:"a_link" %></div><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class = "field a"><%= link_to "新規登録",new_registration_path(resource_name),class:"a_link"%></div><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class = "field a"><%= link_to "パスワードをお忘れですか？",new_password_path(resource_name),class:"a_link"%></div><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class = "bottom_space">
  <%= link_to "認証を行いますか?",new_confirmation_path(resource_name),class:"a_link"%></div><br />
  </div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "ロックを解除しますか?",new_unlock_path(resource_name),class:"a_link"%></div><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",omniauth_authorize_path(resource_name, provider),class:"a_link" %><br />
  <% end -%>
<% end -%>
