<h3><section class = "page_navi">以下の内容で、送信する。</h3></section>

<section class = "blog_send">
<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
<div class = "w_field">
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :priority %>

  <p>タイトル:<%= @blog.title %></p>
  <p>本文:<%= @blog.content %></p>
  <p>優先度:<%= @blog.getStatusKeyFromValue %></p>
</div>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
<div class = "w_field">
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :priority %>
</div>
  <%= form.submit "もどる" , name: 'back'%>
<% end %>

</section>