<h1><section class = "page_navi"><%= @index_title%>一覧</h1></section>

<div class = "select_priority">
  <div class="table_parent">
  <p><div class = "select_button"><%= link_to 'ALL', filter_blog_path('nonfin') %></p></div>
  <p><div class = "select_button"><%= link_to '優先度A', filter_blog_path('nonfin_A') %></p></div>
  <p><div class = "select_button"><%= link_to '優先度B', filter_blog_path('nonfin_B') %></p></div>
  <p><div class = "select_button"><%= link_to '優先度C', filter_blog_path('nonfin_C') %></p></div>
  </div>
  <div>
  <p><%= link_to '投稿一覧へ', blogs_path %></p>
  </div>
</div>

<% @blogs.each do |blog| %>
  <div class = "border">
    <div class = "p_menu">
      <p>優先度</p>
      <p class = "p_rank">
      <%= blog.getStatusKeyFromValue %></p>
    </div>
    <div class = "tc_menu">
      <p>タイトル:<%= blog.title %></p>
      <p>内容:<%= blog.content %></p>
    </div>
    <div class = "c_menu">
      <p><%= fa_icon 'comment 2x' %><%= blog.comments.count %></p>
    </div>
    <div class = "d_menu">
      <p>作成日時:<%= blog.created_at %></p>
    </div>
    
    <div class = "select_button">
      <p><%= link_to '詳細を確認する', blog_path(blog.id), class: "btn btn-link" %>
      
      <%= link_to 'ブログを編集する', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' }, class: "btn btn-link" %>
      
      <%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } , class: "btn btn-link"%></p>
    </div> 
  </div>
<% end %>

<section class = "page_button">
  <%= paginate @blogs %>
<div class = "new_button">
  
<%= link_to '新規投稿を行う', new_blog_path, class: "btn btn-primary" %>
</div>  
</section>