<div class = "blog_new">
<%= form_with(model: @blog, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_title">
    <%= form.label :title %>
    <div class = "b_field"><%= form.text_field :title %></div>
  </div>
  <div class="blog_title">
    <%= form.label :content %>
    <div class = "b_field"><%= form.text_field :content %></div>
  </div>
  <div class="blog_title">
    <%= form.label :priority %>
    <div class = "b_field"><%= form.select :priority, Blog.statuses.map { |key, value| [key, value]}, {} , class: 'blog_form_control'%></div>
  </div>
  <div class = "blog_title">
    <div class = "b_field"><%= form.submit %></div>
  </div>
<% end %>

<%= link_to "投稿一覧画面にもどる", blogs_path %>
</div>